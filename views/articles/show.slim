- if @article.nil?
  h1 Artikeln finns inte.
- else
h1= @article.name
table.show_article
  tr
    th Artikelnummer
    th Benämning
    th Pris
    th Inköpspris
    th Leverantör
    th Beskrivning
  tr
    td
      a = @article.article_number
    td
      a = @article.name
    td
      a.center = @article.list_price
    td
      a.center = @article.net_price
    td
      a.underline href="/suppliers/#{@article.supplier.id}" #{@article.supplier.name}
    td
      span.description = @article.description
p <a href="/articles/#{@article.id}/edit">Redigera Artikel</a>
